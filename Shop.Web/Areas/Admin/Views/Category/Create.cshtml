@model CreateUpdateCategoryViewModel

<div class="row">
    <form asp-action="Create" method="post" class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary p-3">
              <div class="card-header">
                <h3 class="card-title">ساخت یک دسته جدید</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form role="form">
              @Html.AntiForgeryToken()
                <div class="card-body">
                  <div class="form-group">
                    <label>نام</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                  </div>
                  <div class="form-group">
                    <label>توضیحات</label>
                    <input type="text" class="form-control" asp-for="Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary text-light float-right"><i class="fa fa-plus"></i> اضافه کردن دسته بندی جدید</button>
                </div>
              </form>
            </div>
        <!-- /.card -->
    </form>
</div>

