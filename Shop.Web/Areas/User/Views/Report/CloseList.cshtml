@model IEnumerable<Report>


<div class="card-body">
    <h1>تمامی گزارش های بسته شده</h1><br />

    <table id="products" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>شماره گزارش</th>
                <th>عنوان</th>
                <th>تعداد چت ها</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chat in Model)
            {
                <tr>
                    <td>@chat.Id</td>
                    <td>@chat.Title</td>
                    <td>@chat.ReportMessages.Count()</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary" asp-action="Show" asp-route-id="@chat.Id">رفتن به گزارش</a>
                        </div>
                    </td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>یافت نشد</td>
                    <td>یافت نشد</td>
                    <td>یافت نشد</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary disabled">رفتن به گزارش</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>شماره گزارش</th>
                <th>عنوان</th>
                <th>تعداد چت ها</th>
                <th>عملیات</th>
            </tr>
        </tfoot>
    </table>
</div>



@section Scripts{
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap4.js"></script>
    <!-- SlimScroll -->
    <script src="~/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src=".~/dist/js/demo.js"></script>
    <!-- page script -->
    <script>
        $(function () {
            $("#products").DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    }
                },
                "info": false,
            });
        });
    </script>
}