@model Shop.Web.Areas.User.Models.ViewModel.CreateUpdateUserViewModel

<div class="container">
    <div class=".col-xs-4 .col-md-offset-2">
        <div class="panel panel-default panel-info Profile">
            <div class="panel-body">
                <div class="form-horizontal">
                    <br />
                    <center>
                        <h1>Update Profile</h1>
                    </center><br />
                    <div class="row">
                        <div class="col-lg-6">
                            <form asp-controller="Home" asp-action="EditProfile" method="post" enctype="multipart/form-data">
                                <input asp-for="Id" hidden />
                                <div class="form-group">
                                    <label class="col-sm-12 control-label">FullName</label>
                                    <div class="col-sm-12">
                                        <input class="form-control" asp-for="FullName"
                                               placeholder="FullName">
                                    <span class="text-danger" asp-validation-for="FullName"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-12 control-label">City</label>
                                    <div class="col-sm-12">
                                        <input class="form-control" asp-for="City"
                                               placeholder="City">
                                        <span class="text-danger" asp-validation-for="City"></span>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-12 control-label">Address 1</label>
                                    <div class="col-sm-12">
                                        <input class="form-control" asp-for="Address1"
                                               placeholder="Address 1">
                                        <span class="text-danger" asp-validation-for="Address1"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-12 control-label">Address 2</label>
                                    <div class="col-sm-12">
                                        <input class="form-control" asp-for="Address2"
                                               placeholder="Address 2">
                                        <span class="text-danger" asp-validation-for="Address2"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-12 control-label">Phone</label>
                                    <div class="col-sm-12">
                                        <input class="form-control" asp-for="PhoneNumber"
                                               placeholder="xxx-xxx-xxxx">
                                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-12 control-label">Image</label>
                                    <div class="col-sm-12">
                                        <input class="form-control" asp-for="Image">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-12 col-sm-12">
                                        <button class="btn btn-primary" ng-click="updateMe()">Update</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                        <div class="col-lg-6">
                            <img src="~/Uploads/Images/Avatars/@(Model.Avatar == null ? "" : Model.Avatar)" alt="@Model.FullName" style="width:100%;height:auto" />
                        </div>
                    </div>
                </div>  <!-- end form-horizontal -->
            </div> <!-- end panel-body -->

        </div> <!-- end panel -->


    </div> <!-- end size -->
</div> <!-- end container-fluid -->
