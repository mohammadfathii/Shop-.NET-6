@model User

<div class="container">
    <div class=".col-xs-4 .col-md-offset-2">
        <div class="panel panel-default panel-info Profile" style="padding:20px;border : 1px solid grey">
            <div class="panel-heading flex flex-space-around"> 
                <h1>پروفایل</h1>
                <div class="col-sm-offset-2 col-sm-10">
                    <a asp-controller="Home" asp-action="EditProfile" class="btn btn-warning">آپدیت پروفایل کاربری</a>
                </div>
            </div><br />
            <div class="panel-body" >
                <div class="form-horizontal">
                    <div >
                        <img src="~/Uploads/Images/Avatars/@Model.Avatar" style="border-radius:50%;width:250px;height:250px;border:1px solid black"/>
                    </div><br />
                    <div class="row">
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">FullName</label>
                                <div class="col-sm-12">
                                    <input disabled class="form-control" type="text" name="firstName"
                                           value="@Model.FullName" ng-model="me.firstName">
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-12">
                                    <input disabled class="form-control" type="text" name="email"
                                       value="@Model.Email" ng-model="me.email">
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">City</label>
                                <div class="col-sm-12">
                                    <input disabled class="form-control" type="text" name="department"
                                       value="@Model.City" ng-model="me.email">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">Address 1</label>
                                <div class="col-sm-12">
                                    <input disabled class="form-control" type="text" name="title"
                                       value="@Model.Address" ng-model="me.email">
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">Address 2</label>
                                <div class="col-sm-12">
                                    <input disabled class="form-control" type="text" name="startDate"
                                       value="@Model.Address2" ng-model="me.email">
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">Is Admin</label>
                                <div class="col-sm-12">
                                    <input disabled class="form-control" type="text" name="location"
                                       value="@(Model.IsAdmin ? "True" : "False")" ng-model="me.email">
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-sm-2 control-label">Phone</label>
                                <div class="col-sm-12">
                                    <input disabled class="form-control" type="text" name="phone"
                                       value="@Model.PhoneNumber" ng-model="me.email">
                                </div>
                            </div>
                        
                    </div>
                </div>  <!-- end form-horizontal -->
            </div> <!-- end panel-body -->

        </div> <!-- end panel -->


    </div> <!-- end size -->
</div> <!-- end container-fluid -->
