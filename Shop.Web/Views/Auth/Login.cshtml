@model LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}
<style>
    body{
        background-color : #e3e3e3;
    }
</style>
<div class="card-body p-5 text-center">

    <form asp-action="Login" method="post" class="mb-md-5 mt-md-4 pb-5" >
        @Html.AntiForgeryToken()
        <h2 class="fw-bold mb-2 text-uppercase">Login</h2>

        <div class="form-outline form-white mb-4">
            <input asp-for="@Model.Email" class="form-control form-control-lg" />
            <label class="form-label" asp-for="@Model.Email"></label>
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>

        <div class="form-outline form-white mb-4">
            <input asp-for="@Model.Password" class="form-control form-control-lg" />
            <label class="form-label" asp-for="@Model.Password"></label>
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>

        <div class="form-outline form-white mb-4">
            <label class="form-label" asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
        </div>

        <input class="btn btn-outline-light btn-lg px-5" value="Login" type="submit" />

        @*<p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>


        <div class="d-flex justify-content-center text-center mt-4 pt-1">
        <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
        <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
        <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
        </div>
        *@
    </form>

    <div>
        <p class="mb-0">
            dont have account ? <a asp-controller="Auth" asp-action="Register" class="text-white-50 fw-bold">Sign Up</a>
        </p>
    </div>

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


