@model RegisterViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}

<div class="card-body p-5 text-center">

    <form asp-action="Register" method="post" class="mb-md-5 mt-md-4 pb-5" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
        <p class="text-white-50 mb-5">Please fillout all fields!</p>

        <div class="form-outline form-white mb-4">
            <input asp-for="FullName" class="form-control form-control-lg" />
            <label class="form-label" asp-for="@Model.FullName"></label>
            <span class="text-danger" asp-validation-for="@Model.FullName"></span>
        </div>

        <div class="form-outline form-white mb-4">
            <input asp-for="UserName" class="form-control form-control-lg" />
            <label class="form-label" asp-for="@Model.UserName"></label>
            <span class="text-danger" asp-validation-for="@Model.UserName"></span>
        </div>

        <div class="form-outline form-white mb-4">
            <input asp-for="Email" class="form-control form-control-lg" />
            <label class="form-label" asp-for="@Model.Email"></label>
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>


        <div class="form-outline form-white mb-4">
            <input asp-for="PhoneNumber" class="form-control form-control-lg" />
            <label class="form-label" asp-for="@Model.PhoneNumber"></label>
            <span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
        </div>



        <div class="form-outline form-white mb-4">
            <input asp-for="Password" class="form-control form-control-lg" />
            <label class="form-label" asp-for="@Model.Password"></label>
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>



        <div class="form-outline form-white mb-4">
            <input asp-for="RePassword" class="form-control form-control-lg" />
            <label class="form-label" asp-for="@Model.RePassword"></label>
            <span class="text-danger" asp-validation-for="@Model.RePassword"></span>
        </div>

        <input class="btn btn-outline-light btn-lg px-5" value="Register" type="submit" />

